#!/bin/bash
#
# Workspace launcher
#
# Author: Thomas Fr√∂ssman  ( thomasf@jossystem.se / http://thomas.jossystem.se )
#
set -e

name="$@"
prefix=$(echo -n $name | cut -d '.' -f -1)

if [[ "$name" == *\.* ]]; then
  suffix=$(echo -n $name | cut -d '.' -f 2-)
else
  suffix=""
fi

if [ $(which w.$prefix) ]; then
  w.$prefix && exit 0
fi

case $suffix in
  www|doc)
    exec www-window
    ;;
  remote|ssh)
    exec sshmenu
    ;;
  term|terminal)
    exec term
    ;;
  emacs)
    exec e
    ;;
  files)
    exec nautilus --new-window --no-default-window --no-desktop ~/
    ;;
esac
