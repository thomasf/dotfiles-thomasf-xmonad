#!/bin/sh
#
# Dmenu wrapper, changed colors
#
# Author: Thomas Fr√∂ssman  ( thomasf@jossystem.se / http://thomas.jossystem.se )
# Updates to this file will probably be available at https://github.com/thomasf/dotfiles/
#
if [ -e ~/.config/darkmode ]; then
    bg="#002b36"
    fg="#839496"
else
    bg="#fdf6e3"
    fg="#657b83"
fi
color="#b58900"



exec /usr/bin/dmenu -fn '-*-terminus-*-r-*-*-14-*-*-*-*-*-*' -nb "${bg}" -nf "${fg}" -sf "${bg}" -sb "${color}" -b -i "$@"

# Local Variables:
# eval: (rainbow-mode 1)
# End:
