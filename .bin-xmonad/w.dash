# Author: Thomas Fr√∂ssman  ( thomasf@jossystem.se / http://thomas.jossystem.se )
#

# args: name, cmdstr
launchTerminal(){
    name="${1}"
    cmd="${2}"
    cmdArgs="${3}"
    initial_delay=0.3
    relaunch_delay=1
    if [ $(which ${cmd}) ]; then
        cmdstr="echo starting $cmd...; while :; do sleep $initial_delay; $cmd $cmdArgs; echo relaunching $cmd...; sleep $relaunch_delay; done;"
        urxvt -title "${name}" -name "${name}" -e bash -c "${cmdstr}" &
    fi
}

launchTerminal "pamixer" "pamixer" "-a 2"
launchTerminal "htop" "htop"
launchTerminal "dstat" "dstat" "--time --load --cpu --mem --swap --disk --fs --net --socket --sys 30"
launchTerminal "ncmpcpp" "ncmpcpp"
