# -*- shell-script -*-

# -------------------------
# Help

"xbindkeys_show"
  mod4 + control + F1

# -------------------------
# Application launchers

"appmenu"
  mod4 + p

"xfce4-appfinder"
  mod4 + control + shift + p

"gmrun"
  mod4 + control + alt + shift + p

# -------------------------
# Open terminal

"urxvt"
  mod4 + shift + Return

"urxvt -name LURxvt"
  mod4 + control + Return

"sshmenu"
  mod4 + s

# -------------------------
# Window management

"easyxmotion"
  mod4 + y

"xkill"
  mod4 + shift + control + c

# -------------------------
# Screenshooting

"xfce4-screenshooter"
  mod4 + Print

"scrot screenshot-%Y-%m-%d_%h-%m-%s_$wx$h.png' -e 'mv $f ~/Pictures/scrot/'"
  mod4 + Alt_L + Print
