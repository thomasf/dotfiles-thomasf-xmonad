# -*- shell-script -*-

# -------------------------
# Help

"xbindkeys_show"
  mod4 + shift + F1

# -------------------------
# Application launchers

"appmenu"
  mod4 + p

"xfce4-appfinder"
  mod4 + control + shift + p

"gmrun"
  mod4 + control + alt + shift + p

# -------------------------
# Open terminal

"urxvt"
  mod4 + shift + Return

"urxvt -name LURxvt"
  mod4 + control + Return

"urxvt -name large_term"
  mod4 + control + shift + Return

"sshmenu"
  mod4 + s

# -------------------------
# Window management

"easyxmotion"
  mod4 + u

"xkill"
  mod4 + shift + control + c

# -------------------------
# Multimedia / Mixer

#vol inc Master
"amixer sset Master 3%+"
  Mod4 + plus

#vol del Master
"amixer sset Master 3%-"
  Mod4 + minus

# toggle mpd play/pause
"mpc toggle"
  Mod4 + i

# -------------------------
# Screenshooting

"xfce4-screenshooter"
  mod4 + Print

"scrot screenshot-%Y-%m-%d_%h-%m-%s_$wx$h.png' -e 'mv $f ~/Pictures/scrot/'"
  mod4 + Alt_L + Print
