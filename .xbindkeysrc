# -*- shell-script -*-

# -------------------------
# Help

"xbindkeys_show"
  mod4 + control + F1

# -------------------------
# Application launchers

"appmenu"
  mod4 + p

"xfce4-appfinder"
  mod4 + control + p

# -------------------------
# Open terminal

"urxvt"
  mod4 + control + Return

"sshmenu"
  mod4 + s

# -------------------------
# Window management

"xkill"
  mod4 + shift + control + c

# -------------------------
# Screenshooting

"xfce4-screenshooter"
  mod4 + Print

"scrot screenshot-%Y-%m-%d_%h-%m-%s_$wx$h.png' -e 'mv $f ~/Pictures/scrot/'"
  mod4 + Alt_L + Print


# -------------------------
# Multimedia keys

"mpc toggle"
    XF86AudioPlay

# "urxvt -e ncmpcpp"
#     Shift + XF86AudioPlay

"mpc stop"
    XF86AudioStop

"mpc prev"
    Shift + XF86AudioPrev

"mpc next"
    Shift + XF86AudioNext

"mpc seek -00:00:10"
    XF86AudioPrev

"mpc seek +00:00:10"
    XF86AudioNext

